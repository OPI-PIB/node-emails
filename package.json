{
	"name": "@opi-pib/node-emails",
	"version": "1.0.0",
	"description": "Node email templates bundler",
	"main": "dist/cli.js",
	"types": "dist/cli.d.ts",
	"scripts": {
		"build": "npx rimraf dist && tsc && npx copyfiles example/**/* dist",
		"lint": "eslint --ignore-path .gitignore **/*.ts --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.ts": "npm run lint"
	},
	"files": [
		"dist"
	],
	"prepublishOnly": "npm run build",
	"keywords": [
		"email templates",
		"emails scss",
		"emails partials",
		"email bundler"
	],
	"author": "Dawid Lubowiecki",
	"license": "MIT",
	"dependencies": {
		"@opi-pib/node-utility": "^1.0.0",
		"@opi-pib/ts-utility": "^1.0.0",
		"browser-sync": "^2.27.10",
		"fs-extra": "^10.1.0",
		"gulp": "^4.0.2",
		"gulp-htmlmin": "^5.0.1",
		"gulp-if": "^3.0.0",
		"gulp-inline-css": "^4.0.0",
		"gulp-libsquoosh": "^1.1.2",
		"gulp-load-plugins": "^2.0.7",
		"gulp-replace": "^1.1.3",
		"gulp-sass": "^5.1.0",
		"gulp-sourcemaps": "^3.0.0",
		"gulp-uncss": "^1.0.6",
		"inky": "^1.4.2",
		"lazypipe": "^1.0.2",
		"panini": "^1.7.2",
		"ramda": "^0.28.0",
		"rimraf": "^3.0.2",
		"sass": "^1.54.4",
		"siphon-media-query": "^1.0.0",
		"yargs": "^17.5.1"
	},
	"devDependencies": {
		"@opi-pib/eslint-config-base": "^1.0.0",
		"@types/browser-sync": "^2.26.3",
		"@types/fs-extra": "^9.0.13",
		"@types/gulp": "^4.0.9",
		"@types/gulp-load-plugins": "0.0.33",
		"@types/lazypipe": "0.0.31",
		"@types/ramda": "^0.28.15",
		"@types/rimraf": "^3.0.2",
		"@types/yargs": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"eslint": "^8.22.0",
		"eslint-plugin-import": "^2.26.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"typescript": "^4.7.4"
	},
	"bin": {
		"emails": "./dist/cli.js"
	}
}
